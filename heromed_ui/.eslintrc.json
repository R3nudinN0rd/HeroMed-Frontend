{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
        {
            "files": [
                "src/**/*.js"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": "off",
        "max-len": 0,
        "no-use-before-define": 0,
        "implicit-arrow-linebreak": 0,
        "object-curly-newline": 0,
        "no-shadow": 0,
        "no-trailing-spaces": 0,
        "react/prop-types": 0,
        "import/no-named-as-default": 0,
        "import/no-named-as-default-member": 0,
        "react/function-component-definiti++on": 0,
        "no-unused-vars": 1,
        "react/jsx-filename-extension": 0,
        "react/jsx-one-expression-per-line": 0,
        "react/react-in-jsx-scope": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}